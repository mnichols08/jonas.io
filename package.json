{
  "name": "carter",
  "version": "0.0.1",
  "description": "This is a fork of the Nexter project as part of Jonas Schmedtman's course on Advanced CSS/Sass. Inetead of selling houses, we are selling cars.",
  "main": "index.html",
  "keywords": [
    "sass",
    "css",
    "html"
  ],
  "scripts": {
    "watch:sass": "node-sass sass/main.scss assets/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' assets/css/style.comp.css -o assets/css/style.prefix.css",
    "compress:css": "node-sass assets/css/style.prefix.css assets/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Mikey Nichols",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "concat": "^1.0.3",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1"
  }
}
